{% extends 'base.html.twig' %}

{% block title %}Registro de Usuarios{% endblock %}

{% block usuario_menu %}active{% endblock %}

{% block body %}
    <br><br>
    <h4><ion-icon name="person"></ion-icon> Login</h4>
    <hr>
    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Escriba el email">

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Escriba la clave">
        </div>

        <button type="submit" class="btn btn-success"><ion-icon name="log-in"></ion-icon> Iniciar Sesion</button>
        <button type="button" class="btn btn-info"><ion-icon name="person-add"></ion-icon> Registrarse</button>
    </form>

{% endblock %}