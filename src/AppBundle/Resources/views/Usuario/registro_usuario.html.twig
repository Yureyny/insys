{% extends 'base.html.twig' %}

{% block title %}Registro de Usuarios{% endblock %}

{% block usuario_menu %}active{% endblock %}

{% block body %}
    <br><br>
    <h4><ion-icon name="person"></ion-icon> Registro de Usuario</h4>
    <hr>
    <div class="container">

        {{ form_start(form,{ 'attr':{'class':'form-signin'}}) }}
        <div class="panel panel-default">
            <div class="panel-heading"><label>Registro de Usuario</label></div>
            <div class="panel-body">
                {{ form_widget(form) }}

                <div class="pull-right">
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> <b>Guardar</b></button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}